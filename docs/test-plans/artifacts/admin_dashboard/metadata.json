{
  "slug": "admin_dashboard",
  "url": "https://localhost:3000/admin",
  "title": "Aevatar Station - Admin Dashboard",
  "auth_required": true,
  "page_type": "dashboard",
  "evidence_files": [
    "page.png",
    "visible.txt",
    "abp_app_config.json",
    "metadata.json"
  ],
  "elements": {
    "navigation": {
      "logo_link": {
        "selector": "role=link[name='Aevatar AI']",
        "description": "Main logo link to homepage"
      },
      "home_link": {
        "selector": "role=link[name='Home']",
        "description": "Home navigation link (currently active)"
      },
      "users_link": {
        "selector": "role=link[name*='Users']",
        "description": "Users management navigation link"
      },
      "roles_link": {
        "selector": "role=link[name*='Roles']",
        "description": "Roles management navigation link"
      },
      "workflow_link": {
        "selector": "role=link[name='Workflow']",
        "description": "Workflow navigation link"
      },
      "settings_link": {
        "selector": "role=link[name*='Settings']",
        "description": "Settings navigation link"
      },
      "user_menu_toggle": {
        "selector": "role=button[name='Toggle user menu']",
        "description": "User profile menu toggle button"
      }
    },
    "dashboard": {
      "welcome_heading": {
        "selector": "role=heading[name='Welcome back, User']",
        "description": "Main welcome heading"
      },
      "user_email": {
        "selector": "text=admin-test01@test.com",
        "description": "User email display"
      },
      "user_username": {
        "selector": "text=/Username:\\s*admin-test01/",
        "description": "Username display"
      },
      "authenticated_badge": {
        "selector": "text=Authenticated",
        "description": "Authentication status badge"
      },
      "email_verification_status": {
        "selector": "text=Email Verification >> .. >> text=Not Verified",
        "description": "Email verification status indicator"
      },
      "phone_verification_status": {
        "selector": "text=Phone Verification >> .. >> text=Not Verified",
        "description": "Phone verification status indicator"
      },
      "user_roles": {
        "selector": "text=Roles >> .. >> text=default",
        "description": "User roles display"
      },
      "current_culture": {
        "selector": "text=/Current Culture:\\s*English/",
        "description": "Current culture/language setting"
      },
      "default_resource": {
        "selector": "text=/Default Resource:\\s*BusinessServer/",
        "description": "Default localization resource"
      },
      "enabled_features_count": {
        "selector": "text=/Enabled Features:\\s*\\d+/",
        "description": "Count of enabled features"
      }
    }
  },
  "abp_rules": {
    "password_policy": {
      "RequiredLength": 6,
      "RequiredUniqueChars": 1,
      "RequireNonAlphanumeric": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireDigit": true,
      "ForceUsersToPeriodicallyChangePassword": false,
      "PasswordChangePeriodDays": 0
    },
    "lockout_policy": {
      "AllowedForNewUsers": true,
      "LockoutDuration": 300,
      "MaxFailedAccessAttempts": 5
    },
    "signin_policy": {
      "RequireConfirmedEmail": false,
      "EnablePhoneNumberConfirmation": true,
      "RequireConfirmedPhoneNumber": false
    },
    "user_policy": {
      "IsUserNameUpdateEnabled": true,
      "IsEmailUpdateEnabled": true
    }
  },
  "risk_areas": [
    "Auth state display accuracy (must reflect backend session)",
    "Verification status synchronization with backend",
    "Role display correctness",
    "Navigation access control (permissions-based)",
    "Localization accuracy",
    "Feature flag display consistency"
  ],
  "notes": [
    "Page requires authentication - redirects to /Account/Login if not authenticated",
    "Current test user: admin-test01 with role 'default'",
    "Email and phone verification both show 'Not Verified'",
    "System configuration shows localization (English) and features (0 enabled)",
    "Dashboard is read-only - no user interactions beyond navigation"
  ]
}

